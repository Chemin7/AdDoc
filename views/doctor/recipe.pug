extends ../layouts/layoutIn
block contenido

    .py-5 
        h1.text-4xl.my-5.text-center.font-extrabold Ad
            span.text-blue-600 Doc
        h2.text-center.text-2xl.font-extrabold.mb-9= pagina
        div#success
            if success.length > 0
                div(class="max-w-md mx-auto my-10")
                    p(class="bg-green-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-lg")= success

        div(class="flex flex-wrap mt-10")
            div(class="md:w-1/2 sm:w-full ")
                if errors.length > 0
                    div(class="max-w-md mx-auto my-10")
                        each error in errors
                            p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-lg")= error   
           
        form#recipe-form(action=`/doctors/recipe/${patient.id}` class="space-y-5" method="POST")

            div
                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="treatment") Treatment:
                textarea#treatment.w-full.px-3.py-2.border.border-blue-700.rounded-md.placeholder-gay-300(name="treatment" placeholder="Write the treatment:")

            div
                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="symptoms") Symptoms:
                each symptom in symptoms
                    label.block.mb-2
                        input(type="checkbox" name="symptoms" value=symptom.id)
                        span.ml-2= symptom.name
                        
            input#submit(type="submit"  class="w-full bg-blue-600 hover:bg-blue-700 py-3 text-white font-bold rounded-lg cursor-pointer ")
